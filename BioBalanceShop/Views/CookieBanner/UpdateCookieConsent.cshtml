@{
    ViewBag.Title = "Update Cookie Consent";
}

@section Styles {
    <link rel="stylesheet" href="~/css/messages.css" asp-append-version="true" />
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <br>
        <div class="row">
            <div>
                <img src="~/images/CookieConsentRejected.png" alt="Cookie Consent Rejected image" class="img-thumbnail">
                <div class="text-center">
                    <h4 class="shopMsg" style="text-align:center;">Oops... it seems you have not accepted cookies to use this functionality. You can update your cookie consent below</h4>
                </div>
                <div class="text-center" style="margin: 20px 0 100px 0"><a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">Continue Shopping</a></div>
            </div>
        </div>
    </div>
    <div class="col-3"></div>
</div>

<partial name="_CookieBannerPartial" />