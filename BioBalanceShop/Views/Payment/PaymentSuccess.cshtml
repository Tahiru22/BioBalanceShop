@{
    ViewBag.Title = "Payment Success";
}

@section Styles {
    <link rel="stylesheet" href="~/css/messages.css" asp-append-version="true" />
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <br>
        <div class="row">
            <div class="col-10">
                <img src="~/images/PaymentSuccess.png" alt="Payment Success image" class="img-thumbnail" />
                <div class="text-center">
                    <h2>Payment Successful</h2>
                    <h4 class="shopMsg">Thank you for your purchase @ViewBag.CustomerFirstName! Your order number is: <strong>@ViewBag.OrderNumber</strong></h4>
                </div>
                <div class="text-center"><a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">Continue Shopping</a></div>
            </div>
        </div>
    </div>
    <div class="col-3"></div>
</div>