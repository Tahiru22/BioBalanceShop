@model AdminUserEditFormModel

@{
    ViewBag.Title = "Edit User";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/users.css" asp-append-version="true" />
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="flexContainer">
    <div class="flexItem flexItemLeft">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.UserName"></label>
                <input asp-for="@Model.UserName" class="form-control" placeholder="Username...">
                <span asp-validation-for="@Model.UserName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <textarea asp-for="@Model.Email" rows="4" class="form-control" placeholder="Email..."></textarea>
                <span asp-validation-for="@Model.Email" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" class="form-control" placeholder="First name...">
                <span asp-validation-for="@Model.FirstName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" class="form-control" placeholder="Last name...">
                <span asp-validation-for="@Model.LastName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone number...">
                <span asp-validation-for="@Model.PhoneNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Role">Role:</label>
                <select asp-for="@Model.Role" class="form-control">
                    @foreach (var role in Model.Roles)
                    {
                        if (role == @Model.Role)
                        {
                            <option value="@role" selected>@role</option>
                        }
                        else
                        {
                            <option value="@role">@role</option>
                        }
                    }
                </select>
                <span asp-validation-for="@Model.Role" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
